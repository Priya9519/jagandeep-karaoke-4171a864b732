<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <io.github.kobakei.centereddrawablebutton.CenteredDrawableButton
        android:id="@+id/serial_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:text=""
        app:textStyle="bold"
        android:gravity="center"
        app:textColor="@android:color/white"
        app:textSize="20sp"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:paddingLeft="4sp"
        android:background="@drawable/white_border_drawable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guidelinefirst"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinefirst"
        app:layout_constraintGuide_percent="0.10"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="444dp" />

    <io.github.kobakei.centereddrawablebutton.CenteredDrawableButton
        android:id="@+id/song_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:text=" "
        app:textStyle="bold"
        android:gravity="left"
        app:textColor="@android:color/white"
        app:textSize="20sp"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:paddingLeft="4sp"
        android:background="@drawable/white_border_drawable"
        app:layout_constraintLeft_toRightOf="@+id/guidelinefirst"
        app:layout_constraintTop_toTopOf="@+id/serial_number"
        app:layout_constraintRight_toLeftOf="@+id/guidelinesecond"
        app:layout_constraintBottom_toBottomOf="@+id/serial_number"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinesecond"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="444dp" />
    <io.github.kobakei.centereddrawablebutton.CenteredDrawableButton
        android:id="@+id/artist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:text=" "
        app:textStyle="bold"
        android:gravity="left"
        app:textColor="@android:color/white"
        app:textSize="20sp"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:paddingLeft="4sp"
        android:background="@drawable/white_border_drawable"
        app:layout_constraintLeft_toRightOf="@+id/guidelinesecond"
        app:layout_constraintTop_toTopOf="@+id/serial_number"
        app:layout_constraintRight_toLeftOf="@+id/guidelinethird"
        app:layout_constraintBottom_toBottomOf="@+id/serial_number"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinethird"
        app:layout_constraintGuide_percent="0.80"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="444dp" />

    <io.github.kobakei.centereddrawablebutton.CenteredDrawableButton
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:text="  "
        app:textStyle="bold"
        android:gravity="center"
        app:textColor="@android:color/white"
        app:textSize="20sp"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:paddingLeft="4sp"
        android:background="@drawable/white_border_drawable"
        app:layout_constraintLeft_toRightOf="@+id/guidelinethird"
        app:layout_constraintTop_toTopOf="@+id/serial_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/serial_number"
        />

</android.support.constraint.ConstraintLayout>